<h1><%= t('cho.csv.work.create.heading') %></h1>

<%= form_for(@csv_file, url: csv_works_validate_path) do |form| %>

  <%= form.hidden_field :file, value: @csv_file.cached_file_data %>
  <%= label_tag(:csv_file_file) do %>
    <%= t('cho.csv.work.create.description') %>
  <% end %>
  <%= form.file_field :file %>

  <div class="actions">
    <%= form.submit t('cho.csv.work.create.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
