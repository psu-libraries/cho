<!DOCTYPE html>
<html lang="en" class="no-js">
<%= render partial: 'shared/head_content' %>
<body class="<%= render_body_class %>">
<div class="skip">
  <a href="#maincontainer"><%= t('cho.layout.skip') %></a>
</div>

<%= render partial: 'shared/header_navbar' %>

<%# Temporary layout until the search bar moves to primary nav %>
<div class="row">
  <div class="col-12 col-md-8 offset-md-4 p-2">
    <%= render partial: 'shared/search_bar' %>
  </div>
</div>

<main id="maincontainer" class="<%= container_classes %>">
  <%= content_for(:container_header) %>

  <%= render partial: 'shared/flash_msg', layout: 'shared/flash_messages' %>

  <div class="row">
    <%= content_for?(:content) ? yield(:content) : yield %>
  </div>
</main>

<%= render partial: 'shared/footer' %>
<%= render partial: 'shared/modal' %>
</body>
</html>
